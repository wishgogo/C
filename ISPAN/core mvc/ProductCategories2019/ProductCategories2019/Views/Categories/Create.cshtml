@model ProductCategories2019.Models.Categories

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <br />
                <img id="imgPrevie" style="width:320px;height:240px" src="@Url.Content("~/images/noimage.jpg")" title="尚無內容"/>
                <br /><br />
                <input id="File1" name="File1" type="file"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" accept="image/*"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.min.js"></script>
    <script>    
        $("#File1").change(function (e) {
            readUrl(this, $("#imgPrevie"));
        });
    </script>
    
}
